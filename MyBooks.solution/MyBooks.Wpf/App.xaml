<Application
	x:Class="MyBooks.Wpf.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:common="clr-namespace:MyBooks.Common"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:MyBooks.Wpf"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewModels="clr-namespace:MyBooks.BLL;assembly=MyBooks.BLL"
	StartupUri="Views/BooksView.xaml"
	mc:Ignorable="d">

	<Application.Resources>

		<ResourceDictionary>

			<!--  Registratie van de ViewModelLocator  -->
			<viewModels:ViewModelLocator x:Key="Locator" d:IsDataSource="True" />

			<!--  Registratie van de verschillende Converters  -->
			<common:PathToImageConverter x:Key="ImageConverter" />


			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Common/MyBooksColors.xaml" />
				<ResourceDictionary Source="Common/StandardTheme.xaml" />

			</ResourceDictionary.MergedDictionaries>

		</ResourceDictionary>

	</Application.Resources>

</Application>
